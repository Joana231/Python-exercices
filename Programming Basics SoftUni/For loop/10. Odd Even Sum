count = int(input())
sum_even = 0
sum_odd = 0

for i in range(0, count):
    number = int(input())

    if i % 2 != 0:
        sum_odd += number

    else:
        sum_even += number

if sum_odd == sum_even:
    print(f"Yes" + "\n" + "Sum = {}".format(sum_odd))
else:
    sum_one = abs(sum_odd - sum_even)
    print(f"No" + "\n" + "Diff = {}".format(sum_one))